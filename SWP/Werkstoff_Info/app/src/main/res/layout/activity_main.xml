<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="102dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Geben Sie den Fräserdurchmesser ein [mm]" />

    <EditText
        android:id="@+id/durchmesser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Wählen Sie den zu bearbeitenden Werkstoff " />

    <CheckBox
        android:id="@+id/gehartet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gehärteter Stahl" />

    <CheckBox
        android:id="@+id/rostfrei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rostfreie Stähle" />

    <CheckBox
        android:id="@+id/guss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gusseisen" />

    <CheckBox
        android:id="@+id/hitze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitzebeständiger, warmfester Stahl" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Wollen Sie Schruppen oder Schlichten? " />

    <CheckBox
        android:id="@+id/schrup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schruppen" />

    <CheckBox
        android:id="@+id/schicht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schlichten" />

    <TextView
        android:id="@+id/ergebnis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Drehzahl"
        android:padding="30dp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zurücksetzten" />


</LinearLayout>